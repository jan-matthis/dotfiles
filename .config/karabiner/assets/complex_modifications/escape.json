{
  "title": "Escape key",
  "rules": [
    {
      "description": "Right Option to ESC if pressed alone",
      "manipulators": [
        {
            "type": "basic",
            "from": {
                "key_code": "right_option",
                "modifiers": {
                    "optional": ["any"]
                }
            },
            "to": [
                {
                    "key_code": "right_option",
                    "lazy": true
                }
            ],
            "to_if_alone": [
                {
                    "key_code": "escape"
                }
            ]
        }
      ]
    }
  ]
}
