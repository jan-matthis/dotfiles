{
  "title": "Sonic Pi: Left Command + Arrow Keys",
  "rules": [
    {
      "description": "Sonic Pi: Left Command + Up to Page Up",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "up_arrow",
            "modifiers": {
              "mandatory": [
                "left_command"
              ],
              "optional": [
                "caps_lock",
                "option"
              ]
            }
          },
          "to": [
            {
              "key_code": "page_up"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^net.sonic-pi"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "Sonic Pi: Left Command + Down to Page Down",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "down_arrow",
