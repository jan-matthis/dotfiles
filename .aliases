# Config dotfiles
alias config='/usr/bin/git --git-dir=$HOME/.cfg/ --work-tree=$HOME'
alias cfg='config'


# Edit config files
alias cfg-alacritty="ed $HOME/.config/alacritty/alacritty.yml"
alias cfg-aliases="ed $HOME/.aliases"
alias cfg-tmux="ed $HOME/.tmux.conf"
alias cfg-vim="ed $HOME/.config/vim/vimrc"


# Disk space
alias ducks='du -cksh -- * | sort -rn | head'


# Git
alias g='git'
alias gita='git add'
alias gitc="git commit"
alias gitcm="git commit -m"
alias gitd="git diff"
alias gitds="git diff --staged"
alias gitnow="GIT_COMMITTER_DATE='`date`' git commit --amend --date '`date`'"
alias gitp="git push"
alias gits="git status"

# Editors
alias ed="$EDITOR"
alias vscode="/Applications/Visual\\ Studio\\ Code.app/contents/Resources/app/bin/code"


# Python
alias py="python"
alias pydb='python -m pdb -c continue '
alias pydev='pip install black flake8 isort pytest rich'


# Julia
alias ju="julia --project=@."


# Skim
alias skim="/Applications/Skim.app/Contents/MacOS/Skim"


# Ansible
alias an="$CONDA/bin/ansible"
alias ap="$CONDA/bin/ansible-playbook"
alias ai="$CONDA/bin/ansible-inventory"


# Papers
alias pia="$CONDA/bin/papers-import --path $HOME/Papers arxiv"
alias pew="$CONDA/bin/papers-export --path $HOME/Papers web"
alias pipdf="$CONDA/bin/papers-import --path $HOME/Papers pdf"


# fabrq
alias fabrq="$CONDA/bin/fabrq"
