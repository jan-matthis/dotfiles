# Essentials
alias config='/usr/bin/git --git-dir=$HOME/.cfg/ --work-tree=$HOME'
alias cfg='config'


# Disk space
alias ducks='du -cksh -- * | sort -rn | head'


# Git
alias g='git'
alias gs="git status"
alias gd="git diff"
alias gds="git diff --staged"
alias gch="git rev-parse HEAD"
alias gnow="GIT_COMMITTER_DATE='`date`' git commit --amend --date '`date`'"


# Editors
alias vi='vim'
alias vscode="/Applications/Visual\\ Studio\\ Code.app/contents/Resources/app/bin/code"


# Python
alias py="python"
alias pydb='python -m pdb -c continue '
alias pydev='pip install black flake8 isort pytest rich'


# Julia
alias ju="julia --project=@."


# Skim
alias skim="/Applications/Skim.app/Contents/MacOS/Skim"


# Ansible
alias an="ansible"
alias ap="ansible-playbook"
alias ai="ansible-inventory"


# Papers
alias pia="papers-import --path ~/Papers arxiv"
alias pew="papers-export --path ~/Papers web"
alias pipdf="papers-import --path ~/Papers pdf"
